<h3>{{ _('Dashboard Settings') }}</h3>
<form class="form-horizontal">
	<div class="control-group">
        <label class="control-label">{{ _('Progress gauge type')}}</label>
        <div class="controls">
            <label class="radio">
                <input type="radio" name="pluginDashboardProgressGroup" value="circle" data-bind="checked: settingsViewModel.settings.plugins.dashboard.gaugetype"> {{ _('Circle') }}
            </label>
            <label class="radio">
                <input type="radio" name="pluginDashboardProgressGroup" value="bar" data-bind="checked: settingsViewModel.settings.plugins.dashboard.gaugetype"> {{ _('Bar') }}
            </label>
        </div>
    </div>
    <div class="control-group">
        <div >
            <label class="checkbox">{{ _('Use theme colors in fullscreen mode') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.fullscreenUseThemeColors">
            </label>
        </div>
    </div>

    <legend>{{ _('Temperature Gauge Settings') }}</legend>
    <div class="control-group">
        <div >
            <label class="checkbox">{{ _('Enable Temp Gauge Colors') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showTempGaugeColors">
            </label>
        </div>
        <span class="label label-info">Info:</span> Temp gauges will be blue below the temp deviation of the target temp, red if it goes above and green between the two. </span><br/>
        <label class="control-label">{{ _('Target temp deviation:')}}</label>
        <div class="controls">
            <input type="number" min="0" max="50" step="1" class="input-mini text-left" data-bind="value: settingsViewModel.settings.plugins.dashboard.targetTempDeviation">
            <span class="add-on">&deg;C</span>
        </div>
        <span class="label label-info">Info:</span> The max range of the respective temp gauge: </span><br/>
        <br/>
        <label class="control-label">{{ _('Hotend Max Temp:')}}</label>
        <div class="controls">
            <input type="number" min="0" max="300" step="10" class="input-mini text-left" data-bind="value: settingsViewModel.settings.plugins.dashboard.hotendTempMax">
            <span class="add-on">&deg;C</span>
        </div>
        <label class="control-label">{{ _('Bed Max Temp:')}}</label>
        <div class="controls">
            <input type="number" min="0" max="300" step="10" class="input-mini text-left" data-bind="value: settingsViewModel.settings.plugins.dashboard.bedTempMax">
            <span class="add-on">&deg;C</span>
        </div>
        <label class="control-label">{{ _('Chamber Max Temp:')}}</label>
        <div class="controls">
            <input type="number" min="0" max="300" step="10" class="input-mini text-left" data-bind="value: settingsViewModel.settings.plugins.dashboard.chamberTempMax">
            <span class="add-on">&deg;C</span>
        </div>
   </div>

    <legend>{{ _('Widget Visibility') }}</legend>
    <div class="control-group">
        <div >
            <label class="checkbox">{{ _('Show FullScreen & FullBrowser Mode Buttons') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showFullscreen">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show RPi System Info') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showSystemInfo">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Command Widgets') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showCommandWidgets">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Job Control Buttons') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showJobControlButtons">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Fan Gauge') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showFan">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Temp Sensor Info from Enclosure Plugin (Experimental)') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showSensorInfo">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Printer Message (M117)') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showPrinterMessage">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Job Progress Gauge') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showProgress">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Layer Progress Gauge') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showLayerProgress">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Layer Duration Graph') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showLayerGraph">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Filament Widget') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showFilament">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Show Webcam') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.showWebCam">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Hide hotend(s) when target temp = 0 (Useful for dual hotends)') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.hideHotend">
            </label>
        </div>
        <div >
            <label class="checkbox">{{ _('Supress DLP warning messages') }}
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.dashboard.supressDlpWarning">
            </label>
        </div>
    </div>



    <div >
         <legend>{{ _('Command Widets') }}</legend>
         <span class="label label-info">Info:</span> The stdout output of each shell command below will be displayed in a separate widget.</span><br/>
            <div class="row-fluid">
                <div class="span3"><h5>{{ _('Icon') }}</h5></div>
                <div class="span3"><h5>{{ _('Name') }}</h5></div>
                <div class="span4"><h5>{{ _('Command') }}</h5></div>
                <div class="span2"><h5>{{ _('Action') }}</h5></div>
            </div>
            <div data-bind="foreach: settingsViewModel.settings.plugins.dashboard.commandWidgetArray">
                <div class="row-fluid" style="margin-bottom: 5px">
                    <div class="span3">
                        <select class="input-medium" data-bind="value: icon">
                            <option value="command-icon.png">Command</option>
                            <option value="sensor-icon.png">Sensor</option>
                            <option value="ambient-sensor-icon.png">Ambient</option>
                            <option value="light-icon.png">Light</option>
                            <option value="flash-icon.png">Power</option>
                        </select>
                    </div>
                    <div class="span3">
                        <input type="text" class="span12" data-bind="value: name">
                    </div>
                    <div class="input-append span4">
                        <input type="text" class="span12" data-bind="value: command">
                    </div>
                    <div class="span2">
                        <button title="Remove Command" class="btn btn-danger" data-bind="click: $parent.removeCommandWidget, attr: { 'title': 'Remove Command Widget' }"><i class="fa fa-trash-o"></i></button>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="offset10 span2">
                    <button title="Add Command Widget" class="btn btn-primary" data-bind="click: addCommandWidget"><i class="fa fa-plus"></i></button>
                </div>
            </div>

    </div>



    <legend>{{ _('CPU Temperature warning thresholds') }}</legend>
    <span class="label label-info">Info:</span> The CPU temp indicator will be set to orange above the warning threshold and red above the critical threshold.</span><br/>
    <div class="control-group">
        <label class="control-label">{{ _('CPU warning threshold:')}}</label>
        <div class="controls">
            <input type="number" min="0" max="200" step="1" class="input-mini text-left" data-bind="value: settingsViewModel.settings.plugins.dashboard.cpuTempWarningThreshold">
            <span class="add-on">&deg;C</span>
        </div>
        <label class="control-label">{{ _('CPU critical threshold:')}}</label>
        <div class="controls">
            <input type="number" min="0" max="200" step="1" class="input-mini text-left" data-bind="value: settingsViewModel.settings.plugins.dashboard.cpuTempCriticalThreshold">
            <span class="add-on">&deg;C</span>
        </div>
   </div>



</form>


